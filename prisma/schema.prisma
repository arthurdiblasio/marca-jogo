generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Sport {
  FUTEBOL
  VOLEI
  FIFA
  BASQUETE
  // 👉 futuramente só adicionar novos aqui
}

model User {
  id               String    @id @default(uuid())
  name             String
  email            String    @unique
  password         String // 🔐 será armazenado com hash (bcrypt, argon2)
  phone            String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  isEmailVerified  Boolean   @default(false)
  verificationCode String?
  codeExpiresAt    DateTime?

  // relacionamento
  teams   Team[]
  Account Account[]
  Session Session[]
}

model Team {
  id           String    @id @default(uuid())
  name         String
  sport        Sport
  foundedAt    DateTime? // 🆕 quando o time foi fundado
  history      String? // 🆕 breve história do time
  hasField     Boolean   @default(false)
  fieldName    String?
  fieldAddress String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // FK para usuário dono
  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  // 🔒 regra: um usuário não pode ter 2 times com o mesmo nome no mesmo esporte
  @@unique([ownerId, name, sport])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
